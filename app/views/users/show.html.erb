<% provide(:title, "Mon profil") %>
<%= render 'layouts/header' %>
<div class="ui container">
  <h1>Mon profil</h1>

    <div class="ui people shape">
      <div class="ui card">
        <div class="image">
          <% if Time.new.min % 3 === 0  %>
          <img src=" https://semantic-ui.com/images/movies/12years-horizontal.jpg">
          <% elsif Time.new.min % 2 === 0  %>
          <img src=" https://semantic-ui.com/images/movies/totoro-horizontal.jpg">
          <% else %>
          <img src="https://semantic-ui.com/images/movies/watchmen-horizontal.jpg">
          <% end %>
        </div>
        <div class="content">
          <div class="header"><%= @user.name %></div>
          <div class="meta">
            <a><%= @user.email %></a>
          </div>
          <div class="description">
            <% if @user.role === false %>
              Etudiant en <%= @user.current_year %> ème année.
            <% end %>
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            Inscrit en 2018
          </span>
          <span>
            <i class="user icon"></i>
            Section cinéma
          </span>
        </div>
      </div>
  </div>

  <div class="ui message">
    <div class="header">
      <h2>Informations utiles :</h2><br>
    </div>
  <p>
    <%= link_to "Voir le calendier", meetings_path, :class => "header" %> </br>
    <a href="https://prepa-cinema.slack.com/" target="_blank" class="header">
      Aller sur slack
    </a> </br>
    <a href="https://www.youtube.com/channel/UC0qZ4P8CyfRDxIzsn2Fcdsw/videos" target="_blank" class="header">
      Vidéos des étudiants
    </a> </br>
  </p>
  </div>



</div>
<%= render 'layouts/footer' %>
</div>
