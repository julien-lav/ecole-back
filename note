+ in environements/production.rb

config.action_mailer.smtp_settings = {
    address:              'smtp.gmail.com',
    port:                 587,
    domain:               'gmail.com',
    user_name:            'xxx@gmail.com',
    password:             'xxx',
    authentication:       :plain,
    enable_starttls_auto: true
    }


User.create(:name => 'Admin', :email => 'admin@mail.fr', :current_year => 5, :role => true, :password => 'antoine', :password_confirmation => 'antoine')


User.create(:name => 'Admin', :email => 'blabla@mail.fr', :current_year => 5, :role => false, :password => 'kjazbdlh', :password_confirmation => 'kjazbdlh')
